.where
  &__title
    margin 0 auto
    max-width 950px
    text-align center
    color black
    fontify 28px 400 36px
    @media $desktopMax
      fontify 24px 400 32px
      max-width 820px
  &__list
    padding 0 40px
    mt 74px
    df(flex-start, center)
    flex-wrap wrap
    w calc(100% + 80px)
    ml -80px
    mb -80px
    @media $desktopMax
      padding 0 20px
      w calc(100% + 55px)
      ml -55px
    @media $LandscapeMin
      w calc(100% + 40px)
      ml -40px
    @media $PortraitMedium
      mb -40px
  &__item
    h 77px
    mb 80px
    dfv(center, center)
    ml 80px
    @media $desktopMax
      ml 55px
    @media $LandscapeMin
      ml 40px
    @media $PortraitMedium
      mb 40px
  &__img
    max-width 100%