.catalog
  &__elem
    pos relative
    z-index 1
    &:first-child
      mt -40px
      @media $LandscapeMin
        mt 0
    & + &
      mt 180px
      @media $LandscapeMin
        mt 120px
    &-img
      pos absolute
      z-index -1
      t 50%
      l 50%
      opacity 0
      transform translate(-50%, -50%)
      transition 1.5s opacity
      /html.no-smil ^[-1]:last-child &
        t auto
        b 0
        transform translateX(-50%)
      @media $desktopMin
        max-width 270px
      @media $LandscapeMax
        max-width 252px
      @media $LandscapeMin
        db()
        max-width 70%
        pos relative
        transform none
        t 0
        l 0
        margin 0 auto 30px
      &[visible]
        opacity 1
    &-row
      df(center, flex-start)
      & + &
        mt 60px
        @media $LandscapeMin
          mt 0
      @media $LandscapeMin 
        flex-direction column
        justify-content flex-start
    &-col
      pos relative
      w calc(50% - 30px)
      @media $LandscapeMin 
        w 100%
      & + &
        ml 60px
        @media $LandscapeMin 
          ml 0
    &-info
      w 100%
      text-align center
      padding 32px 0 40px
      @media $LandscapeMin
        padding 15px 0 0
    &-href
      color black
      fontify 36px 400 40px
      border-bottom 1px solid
      transition .7s border
      @media $lDesktopSmall
        fontify 30px 400 36px
      @media $LandscapeMax
        fontify 26px 400 30px
      span
        pos relative
        t 8px
        @media $lDesktopSmall
          t 5px
        @media $LandscapeMax
          t 4px
      &:hover
        border-color transparent
    &-description
      font-family $sans
      fontify 18px 400 28px
      max-width 360px
      margin 33px auto 0
      @media $lDesktopSmall
        fontify 17px 400 25px
      @media $desktopMin
        max-width 270px
  &__img
    db()
    max-width 100%
    opacity 0
    transform translate3d(0, 150px, -50px) rotate3d(1.4, -.3, 0, 75deg)
    transform-style preserve-3d
    will-change transform
    transition 1.7s transform, 1.7s opacity
    @media $LandscapeMin
      dn()
    &[visible]
      opacity 1
      transform translate3d(0px, 0, 0) rotate3d(0, 0, 0, 20deg)
    &_img5,
    &_img8,
    &_img9,
    &_img11,
    &_img13
      mr 0
      ml auto
    &_img1
      mt -36%
      @media $desktopMin
        mt -16%
    &_img2
      mt 80px
    &_img8
      mt -45%
      @media $desktopMin
        mt -35%
    &_img13
      mt -57%
      @media $desktopMin
        mt -37%