.header
  pos relative
  z-index 3
  &__popup
    pos fixed
    z-index 1
    t 0
    l -100%
    w 100%
    h 100%
    overflow auto
    df(center)
    opacity 0
    transition .7s opacity
    @media $lDesktopSmall
      align-items flex-start
    &-inner
      df()
      flex-wrap wrap
      w 100%
      padding 60px 200px
      max-width 1744px
      margin 0 auto
      @media $lDesktopSmall
        padding 180px 40px 180px
      @media $desktopMin
        flex-direction column
      @media $PortraitMedium
        pt 130px
    &-list
      dfv()
    &-col
      w calc(50% - 30px)
      @media $desktopMin
        w 100%
      & + &
        ml 60px
        @media $desktopMin
          ml 0
          mt 40px
        @media $PortraitMedium
          mt 20px
      &:nth-child(2n - 1)
        ml 0
    &-item
      @media $desktopMin
        w 100%
        text-align center
      & + &
        mt 30px
        @media $lDesktopSmall
          mt 20px
        @media $desktopMin
          mt 40px
        @media $PortraitMedium
          mt 20px
    &-href
      pos relative
      l 0
      color #6c3225
      fontify 96px 700 100px
      transition .7s color, .7s left
      @media $lDesktopSmall
        fontify 86px 700 92px
      @media $desktopMedium
        fontify 80px 700 84px
      @media $LandscapeMin
        fontify 60px 700 64px
      @media $PortraitMedium
        fontify 35px 700 40px
      &.active
        color black
      &:hover
        l 20px
        
.socials
  @media $desktopMin
    text-align center
  &__title
    fontify 28px 400 36px
    mt 150px
    max-width 435px
    @media $lDesktopSmall
      mt 70px
    @media $desktopMin
      margin 70px auto 0
      fontify 21px 400 29px
    @media $PortraitMedium
      mt 40px
  &__list
    mt 45px
    df(center, flex-start)
    @media $desktopMin
      justify-content center
    @media $PortraitMedium
      transform scale(.5)
      mt 25px
  &__item
    & + &
      ml 60px
  &__href
    ib()
    transition .7s opacity
    &:hover
      opacity .5
    &[data-type="yt"]
      size 29px 22px
      background url('data:image/png;base64,') no-repeat center
    &[data-type="fb"]
      size 26px
      background url('data:image/png;base64,') no-repeat center
    &[data-type="vk"]
      size 34px 20px
      background url('data:image/png;base64,') no-repeat center
    &[data-type="id"]
      size 17px 28px
      background url('data:image/png;base64,') no-repeat center
    &[data-type="inst"]
      size 26px
      background url('data:image/png;base64,') no-repeat center

.burger
  pos fixed
  z-index 2
  r 0
  t 0
  size 130px
  bgc white
  cursor pointer
  transition .7s transform
  will-change transform
  @media $PortraitMedium
    transform scale(.65)
    transform-origin top right
  &:before
    content ""
    pos absolute
    l 54px
    t 50px
    size 30px 1px
    bgc black
    transition .5s width, .5s background, .5s transform, .5s top
  &__meat
    content ""
    pos absolute
    l 54px
    t 64px
    size 30px 1px
    bgc black
    transition .5s width, .5s background, .5s transform, .5s top  
  &:after
    content ""
    pos absolute
    l 54px
    b 52px
    size 30px 1px
    bgc black
    transition .5s width, .5s background, .5s transform, .5s bottom 
  &.open
    &:before
      animation burger-top 1s ease-in-out forwards
    &:after
      animation burger-bottom 1s ease-in-out forwards
    & ^[-1]__meat
      opacity 0
  &.open.remove
    &:before
      animation burger-top-invert 1s ease-in-out forwards
    &:after
      animation burger-bottom-invert 1s ease-in-out forwards
    & ^[-1]__meat
      opacity 1
      transition .4s opacity .6s
  &__shadow
    bgc white
    pos fixed
    b 0
    l 0
    w 100%
    h 0
    transition .7s height
      
html:not(.touchevents) .burger
  &:not(.open):hover
    &:before
      t 47px
    &:after
      b 50px
  &:not(.open):hover &__meat
    animation burger-hover 1s infinite ease-in-out alternate forwards 200ms
    
@keyframes burger-top
  0%
    t 50px
  40%
    t 65px
  60%
    t 65px
    transform rotate(0)
  100%
    t 65px
    transform rotate(45deg)
    
@keyframes burger-bottom
  0%
    b 52px
  40%
    b 64px
  60%
    b 64px
    transform rotate(0)
  100%
    b 64px
    transform rotate(-45deg)

@keyframes burger-top-invert
  0%
    t 65px
    transform rotate(45deg)
  40%
    t 65px
    transform rotate(0)
  60%
    t 65px
  100%
    t 50px
    
@keyframes burger-bottom-invert
  0%
    b 64px
    transform rotate(-45deg)
  40%
    b 64px
    transform rotate(0)
  60%
    b 64px
  100%
    b 52px
      
.logo
  pos fixed
  z-index 2
  t 53px
  l 44px
  &__img
    max-width 100%
  @media $lDesktopSmall
    t 33px
    l 24px
  @media $PortraitMedium
    w 80px
    t 23px
    l 19px
  
.index .logo
  filter brightness(0) invert(1)
  transition .7s filter
  
body.burgeropen
  overflow hidden
  .logo
    filter none
  .burger__shadow
    height 100%
  .header__popup
    l 0
    opacity 1
    transition-delay .7s
  .burger
    bgc transparent
  .logo
    pos fixed
    bgc white
    
html.touchevents
  .burger
    &:not(.open):hover
      &:before
        animation none
      .burger__meat
        animation none
      &:after
        animation none
    &:not(.open):hover .burger__meat
      animation none